{
  "manifest_version": 3,
  "name": "CyberWarTools UA - Squad303 Automation",
  "version": "1.0.0",
  "description": "Native messaging bridge for Squad303 automation toolkit",
  "permissions": [
    "nativeMessaging",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Squad303 Controller"
  },
  "content_scripts": [
    {
      "matches": ["https://textnow.com/*", "https://*.textnow.com/*"],
      "js": ["content/inject.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://localhost:*/*"]
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
